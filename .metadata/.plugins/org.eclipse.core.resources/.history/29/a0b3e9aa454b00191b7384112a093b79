package br.com.db1.db1start;

public class ExercicioInteger {
	
	public static Integer somar(Integer numero1,Integer numero2){
		Integer soma = numero1+numero2;
		return soma;
	}
	public static Integer sub(Integer numero1,Integer numero2){
		Integer sub = numero1-numero2;
		return sub;
	}
	public static Integer mult(Integer numero1,Integer numero2){
		Integer mul = numero1*numero2;
		return mul;
	}
	public static Integer div(Integer numero1,Integer numero2){
		Integer div = numero1/numero2;
		return div;
	}
	public static String par(Integer numero1){
		String par1;
		if(numero1 % 2 == 0){
			par1 = "Par";
		}else {
			par1 = "Impar";
		}
		
		return par1;
	}
	
	
	
	public static void main(String[] args){
		
		Integer num1 = 10;
		Integer num2 = 20;
		
		Integer sum = num1+num2;
		Integer sub = num1-num2;
		
		
		System.out.println(sum);
		System.out.println(sub);
		
		System.out.println("--------------------------");
		
		Integer resultado = ExercicioInteger.somar(num1, num2);
		Integer resultado2 = ExercicioInteger.sub(num1, num2);
		Integer resultado3 = ExercicioInteger.mult(num1,num2);
		Integer resultado4 = ExercicioInteger.div(num1,num2);
		String parImpar = ExercicioInteger.par(num1);
		
		System.out.println(resultado);
		System.out.println(resultado2);
		System.out.println(resultado3);
		System.out.println(resultado4);
		System.out.println(parImpar);
		
		
		
	}

}
